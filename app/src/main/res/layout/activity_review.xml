<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unclassifiedContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Name -->
    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Phones -->
    <EditText
        android:id="@+id/editPhones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Phone Numbers"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Emails -->
    <EditText
        android:id="@+id/editEmails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Emails"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editPhones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Job Title -->
    <EditText
        android:id="@+id/editJobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Job Title"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editEmails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Company -->
    <EditText
        android:id="@+id/editCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Company"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editJobTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Address -->
    <EditText
        android:id="@+id/editAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editCompany"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Website -->
    <EditText
        android:id="@+id/editWebsite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Website"
        android:inputType="textUri"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Industry Spinner -->
    <Spinner
        android:id="@+id/industryDropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/editWebsite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Field Spinner -->
    <Spinner
        android:id="@+id/fieldDropdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/industryDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Unclassified Label -->
    <TextView
        android:id="@+id/unclassifiedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unclassified Data"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fieldDropdown"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Flow for Chips -->
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/unclassifiedFlow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/unclassifiedLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_wrapMode="chain"
        app:flow_horizontalGap="8dp"
        app:flow_verticalGap="8dp"
        app:flow_maxElementsWrap="4"
        app:flow_horizontalAlign="start" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEdit" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnSave"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>